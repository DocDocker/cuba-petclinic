<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.cubaplatform.petclinic.web.vet.vet.VetEdit"
        datasource="vetDs"
        focusComponent="fieldGroup"
        messagesPack="com.cubaplatform.petclinic.web.vet.vet">
    <dsContext>
        <datasource id="vetDs"
                    class="com.cubaplatform.petclinic.entity.vet.Vet"
                    view="vet-with-specialties">
            <collectionDatasource id="specialtiesDs"
                                  property="specialties"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="vetDs">
            <column width="250px">
                <field property="firstName"/>
                <field property="lastName"/>
            </column>
        </fieldGroup>
        <groupBox id="specialtiesBox"
                  caption="msg://com.cubaplatform.petclinic.entity.vet/Vet.specialties">
            <table id="specialtiesTable"
                   height="200px"
                   width="100%">
                <actions>
                    <action id="add"/>
                    <action id="remove"/>
                </actions>
                <columns>
                    <column id="name"/>
                </columns>
                <rows datasource="specialtiesDs"/>
                <buttonsPanel>
                    <button action="specialtiesTable.add"/>
                    <button action="specialtiesTable.remove"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
