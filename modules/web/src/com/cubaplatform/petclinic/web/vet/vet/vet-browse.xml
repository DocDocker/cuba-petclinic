<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.cubaplatform.petclinic.web.vet.vet.VetBrowse"
        focusComponent="vetsTable"
        lookupComponent="vetsTable"
        messagesPack="com.cubaplatform.petclinic.web.vet.vet">
    <dsContext>
        <groupDatasource id="vetsDs"
                         class="com.cubaplatform.petclinic.entity.vet.Vet"
                         view="vet-with-specialties">
            <query>
                <![CDATA[select e from petclinic$Vet e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="vetsTable"
            spacing="true">
        <filter id="filter"
                applyTo="vetsTable"
                datasource="vetsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="vetsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="firstName"/>
                <column id="lastName"/>
            </columns>
            <rows datasource="vetsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="vetsTable.create"/>
                <button id="editBtn"
                        action="vetsTable.edit"/>
                <button id="removeBtn"
                        action="vetsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
